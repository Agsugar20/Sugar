<div class="bottom-section">
    <div class="card">
        <h2 style="font-size: 0.8rem; opacity: 0.5; margin-bottom: 20px;">WORK SHEET (최대 5개)</h2>
        <table>
            <thead>
                <tr>
                    <th>작품명</th>
                    <th>현재 누적</th>
                    <th>목표 자수</th>
                    <th>오늘 쓴 양</th>
                </tr>
            </thead>
            <tbody id="tableBody"></tbody>
        </table>
    </div>
</div>

<script>
    let works = JSON.parse(localStorage.getItem('writerPro_Works')) || [
        { title: "첫 번째 소설", current: 15000, target: 50000, dailyLogs: {} }
    ];
    let selectedIdx = 0;
    let calendar;

    // 캘린더 초기화
    document.addEventListener('DOMContentLoaded', function() {
        const calendarEl = document.getElementById('calendar');
        calendar = new FullCalendar.Calendar(calendarEl, {
            initialView: 'dayGridMonth',
            locale: 'ko',
            height: 'auto',
            events: getCalendarEvents()
        });
        calendar.render();
        renderTable();
    });

    function getCalendarEvents() {
        const work = works[selectedIdx];
        const events = [];
        for (let date in work.dailyLogs) {
            events.push({ title: work.dailyLogs[date] + '자', start: date });
        }
        return events;
    }

    function renderTable() {
        const tbody = document.getElementById('tableBody');
        tbody.innerHTML = '';
        works.forEach((work, idx) => {
            const tr = document.createElement('tr');
            if(idx === selectedIdx) tr.className = 'active-row';
            tr.onclick = (e) => { if(e.target.tagName !== 'INPUT') { selectedIdx = idx; renderTable(); calendar.getEventSources()[0].refetch(); }};
            
            tr.innerHTML = `
                <td><input type="text" value="${work.title}" onchange="updateData(${idx}, 'title', this.value)"></td>
                <td><input type="number" value="${work.current}" readonly></td>
                <td><input type="number" value="${work.target}" onchange="updateData(${idx}, 'target', this.value)"></td>
                <td><input type="number" placeholder="오늘 쓴 자수 입력" onchange="addDailyLog(${idx}, this.value)"></td>
            `;
            tbody.appendChild(tr);
        });
        updateDashboard();
    }

    function addDailyLog(idx, value) {
        const amount = parseInt(value) || 0;
        const today = new Date().toISOString().split('T')[0];
        
        // 데이터 업데이트
        works[idx].dailyLogs[today] = (works[idx].dailyLogs[today] || 0) + amount;
        works[idx].current += amount;
        
        saveAndRefresh();
    }

    function updateData(idx, key, val) {
        works[idx][key] = key === 'title' ? val : parseInt(val) || 0;
        saveAndRefresh();
    }

    function saveAndRefresh() {
        localStorage.setItem('writerPro_Works', JSON.stringify(works));
        calendar.removeAllEvents();
        getCalendarEvents().forEach(ev => calendar.addEvent(ev));
        renderTable();
    }

    function updateDashboard() {
        const work = works[selectedIdx];
        const percent = ((work.current / work.target) * 100).toFixed(1);
        document.getElementById('displayTitle').innerText = work.title.toUpperCase();
        document.getElementById('displayPercent').innerText = `${Math.floor(percent)}%`;
        document.getElementById('progressBar').style.width = `${percent}%`;
    }
</script>
</body>
