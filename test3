<div class="top-section">
    <div class="card left-dash">
        <div id="displayTitle">PROJECT DASHBOARD</div>
        <div id="displayPercent">0%</div>
        <div class="bar-bg"><div id="progressBar" class="bar-fill"></div></div>
        <div id="displayStats" style="font-size: 0.8rem; opacity: 0.5;">오늘의 집필을 기록해주세요</div>
    </div>

    <div class="card">
        <div id='calendar'></div>
    </div>
