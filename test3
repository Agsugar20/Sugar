        /* 좌측 대시보드 */
        .left-dash { display: flex; flex-direction: column; justify-content: center; text-align: center; }
        #displayTitle { font-size: 0.9rem; color: var(--primary); letter-spacing: 5px; margin-bottom: 20px; }
        #displayPercent { font-size: 5rem; font-weight: 100; margin: 0; }
        .bar-bg { background: rgba(255,255,255,0.05); height: 4px; border-radius: 10px; margin: 30px auto; width: 70%; overflow: hidden; }
