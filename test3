        /* 우측 캘린더 커스텀 */
        #calendar { background: transparent; font-size: 0.8rem; height: 450px; }
        .fc { --fc-border-color: rgba(255,255,255,0.05); --fc-today-bg-color: rgba(241, 196, 15, 0.1); }
        .fc-event { background: var(--primary) !important; border: none !important; color: #000 !important; font-weight: bold; font-size: 0.7rem; }
        .fc-toolbar-title { font-size: 1rem !important; color: var(--primary); }

        /* 하단 워크시트 */
